<%= render 'messageView' %>
<%= form_for @loginDetails , url: {action: 'login'} do |account| %>
    <%= account.label :'User Name' %>:
    <%= account.text_field :'userName' %><br />

    <%= account.label :Password %>:
    <%= account.text_field :password ,  :type => 'password' %><br />
    <%= account.submit("Login") %>
    <%= link_to "Sign Up" , action: :signUp%>
<% end %>
